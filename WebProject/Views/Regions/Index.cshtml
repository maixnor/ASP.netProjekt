@model IEnumerable<WebProject.Region>

@{
    ViewBag.Title = "Regions - Index";
        if (Session["a"] != null) { Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }
    else if (Session["cid"] != null) { Layout = "~/Views/Shared/_LayoutCustomer.cshtml"; }
    else if (Session["suid"] != null) { Layout = "~/Views/Shared/_LayoutSupplier.cshtml"; }
    else if (Session["shid"] != null) { Layout = "~/Views/Shared/_LayoutShipper.cshtml"; }
    else if (Session["eid"] != null) { Layout = "~/Views/Shared/_LayoutEmployee.cshtml"; }
    else { Layout = "~/Views/Shared/_Layout.cshtml"; }
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RegionDescription)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.RegionDescription)
    </td>
    @{
        if (Session["a"] != null)
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RegionID }) |
                @Html.ActionLink("Details", "Details", new { id = item.RegionID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.RegionID }) |
                @Html.ActionLink("Territories", "Index", "Territories", new { region = item.RegionID }, null)
            </td>
        }
        else
        {
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.RegionID }) |
                @Html.ActionLink("Territories", "Index", "Territories", new { region = item.RegionID }, null)
            </td>
        }
    }
</tr>
    }

</table>
